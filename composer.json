{
    "name": "brotkrueml/sdbreadcrumb",
    "type": "typo3-cms-extension",
    "description": "View helper for rendering the structured data for a breadcrumb",
    "license": "GPL-2.0-or-later",
    "keywords": [
        "TYPO3 CMS",
        "Fluid",
        "ViewHelper",
        "Structured data",
        "Breadcrumb",
        "SEO"
    ],
    "authors": [
        {
            "name": "Chris MÃ¼ller",
            "role": "Developer"
        }
    ],
    "require": {
        "ext-json": "*",
        "typo3/cms-core": "^8.7.25 || ^9.5 || ^10.0",
        "typo3fluid/fluid": "^2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5 || ^7.5 || ^8.3"
    },
    "replace": {
        "typo3-ter/sdbreadcrumb": "self.version"
    },
    "autoload": {
        "psr-4": {
            "Brotkrueml\\Sdbreadcrumb\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brotkrueml\\Sdbreadcrumb\\Tests\\": "Tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "web-dir": ".Build/web"
        }
    },
    "scripts": {
        "extension-init": [
            "rm -rf ../extension-release/*"
        ],
        "extension-copy": [
            "mkdir -p ../extension-release",
            "cp -ra * ../extension-release/"
        ],
        "extension-cleanup": [
            "rm -f ../extension-release/composer.lock",
            "rm -f ../extension-release/README.md",
            "rm -rf ../extension-release/Tests"
        ],
        "extension-zip": [
            "cd ../extension-release/; grep -Po \"(?<='version' => ')([0-9]+\\.[0-9]+\\.[0-9]+)\" ext_emconf.php | xargs -I {version} sh -c 'rm -fv ../sdbreadcrumb_{version}.zip; zip -r ../sdbreadcrumb_{version}.zip *'"
        ],
        "extension-release": [
            "@extension-init",
            "@extension-copy",
            "@extension-cleanup",
            "@extension-zip"
        ]
    }
}
